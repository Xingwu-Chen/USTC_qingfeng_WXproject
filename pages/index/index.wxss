/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.device {
  position: relative;
  height: 120rpx;
  background-color: #FFF;
  padding-left: 80rpx;
  border-bottom: 1rpx solid #E7E7EB;
}
.single_image_wrap {
  position: absolute;
  left: 10rpx;
}
.device_image {
  width: 100rpx;
  height: 100rpx;
}
.device_info {
  position: relative;
  height: 100rpx;
  margin-left: 40rpx;
}
.device_name {
  font-size: 14px;
  margin-top: 20rpx;
}
.device_d{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.room {
  color: #929292;
  font-size: 12px;
}
.device_status {
  font-size: 14px;
  color: #FF1493;
  margin-right: 40rpx;
}
